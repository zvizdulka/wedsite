<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MainPageServlet</servlet-name>
        <servlet-class>MainPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainPageServlet</servlet-name>
        <url-pattern>/MainPageServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PutAdServlet</servlet-name>
        <servlet-class>PutAdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PutAdServlet</servlet-name>
        <url-pattern>/PutAdServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AnswerServlet</servlet-name>
        <servlet-class>AnswerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AnswerServlet</servlet-name>
        <url-pattern>/AnswerServlet/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PutAnswerServlet</servlet-name>
        <servlet-class>PutAnswerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PutAnswerServlet</servlet-name>
        <url-pattern>/AnswerServlet/PutAnswerServlet/*</url-pattern>
    </servlet-mapping>

</web-app>
